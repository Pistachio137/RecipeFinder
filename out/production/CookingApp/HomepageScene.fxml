<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainSceneController">
   <top>
      <ToolBar BorderPane.alignment="CENTER">
        <items>
          <Button fx:id="homepageLoginButton" mnemonicParsing="false" onAction="#login" text="Login" />
            <Button fx:id="homepageCreateAccountButton" mnemonicParsing="false" onAction="#createAccount" text="Create Account" />
            <Button fx:id="homepageLogoutButton" mnemonicParsing="false" onAction="#logout" text="Logout" />
            <Button fx:id="homepageAboutButton" mnemonicParsing="false" onAction="#about" text="About" />
        </items>
      </ToolBar>
   </top>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Images/searchIcon.jpg" />
                     </image>
                  </ImageView>
                  <Button fx:id="recipeSearchButton" mnemonicParsing="false" onAction="#searchRecipes" text="Search for Recipes" />
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Images/savedRecipesIcon.jpg" />
                     </image>
                  </ImageView>
                  <Button fx:id="savedRecipesButton" mnemonicParsing="false" onAction="#savedRecipes" text="View Your Saved Recipes" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Images/dietaryPreferencesIcon.jpg" />
                     </image>
                  </ImageView>
                  <Button fx:id="editPreferencesButton" mnemonicParsing="false" onAction="#editPreferences" text="Edit Your Preferences" />
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Images/uploadIcon.jpg" />
                     </image>
                  </ImageView>
                  <Button fx:id="submitRecipeButton" mnemonicParsing="false" onAction="#submitRecipe" text="Submit Your Own Recipe" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Images/pantryIcon.jpg" />
                     </image>
                  </ImageView>
                  <Button fx:id="customizePantryButton" mnemonicParsing="false" onAction="#customizePantry" text="Customize Your Pantry" />
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Images/settingsIcon.jpg" />
                     </image>
                  </ImageView>
                  <Button fx:id="editSettingsButton" mnemonicParsing="false" onAction="#editSettings" text="Edit Your Settings" />
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <right>
      <Button mnemonicParsing="false" text="Button" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Button mnemonicParsing="false" text="Button" BorderPane.alignment="CENTER" />
   </bottom>
   <left>
      <Button mnemonicParsing="false" text="Button" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
